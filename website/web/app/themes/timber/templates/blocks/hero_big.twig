{% import 'macros/titles.twig' as title %}

<section class="hero_big">
  {% if block.video %}
    <video class="video" autoplay muted loop src="{{block.video}}"></video>
    <picture>
      {% include 'partial/img.twig' with { img: block.placeholder_image, thumb: 'full' } %}
    </picture>
  {% elseif block.placeholder_image %}
    {% include 'partial/img.twig' with { img: block.placeholder_image, thumb: 'full' } %}
  {% endif %}

  <div class="constrict">
    <div class="hero_big_wrapper">
      {{ title.main(block.title, '', true) }}
      {% if block.link.url %}
      <div class="hero_big_btns">
      <div class="cta_block_link btn black">
          <a href="{{block.link.url}}" target="{{block.link.target}}">{{block.link.title}}</a>
        </div>
              {% endif %}
        {% if block.link_2.url %}
      <div class="cta_block_link btn nucleon-green">
          <a href="{{block.link_2.url}}" target="{{block.link_2.target}}">{{block.link_2.title}}</a>
      </div>
      </div>
      {% endif %}
    </div>
  </div>
</section>