{% import 'macros/titles.twig' as title %}

<section class="hero_big">
  {% if block.video %}
    <video class="video" autoplay muted loop src="{{block.video}}"></video>
    <picture>
      {% include 'partial/img.twig' with { img: block.placeholder_image, thumb: 'full' } %}
    </picture>
  {% elseif block.placeholder_image %}
    {% include 'partial/img.twig' with { img: block.placeholder_image, thumb: 'full' } %}
  {% endif %}

  <div class="constrict">
    <div class="hero_big_wrapper">
      {{ title.main(block.title, '', true) }}
       <div class="two_buttons">
    {% if block.link.url %}
  <a class="btn black" target="{{block.link.target}}" href="{{block.link.url}}">{{block.link.title}}</a>
{% endif %}
{% if block.link2.url %}
  <a class="btn green" target="{{block.link2.target}}" href="{{block.link2.url}}">{{block.link2.title}}</a>
{% endif %}

          </div>
    </div>
  </div>
</section>
