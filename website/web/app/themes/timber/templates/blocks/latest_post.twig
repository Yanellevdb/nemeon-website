{% import 'macros/titles.twig' as title %}

<div class="constrict">
  <div class="latest-post-block">
    <div class="latest-post__title">{{ block.title }}</div>
    <div class="latest-post">
      <div class="latest-post__image">
          <img src="{{ block.image }}" alt="{{ block.image.alt }}">
      </div>
      <div class="latest-post__teaser">
        {% if post.tags %}
          <div class="latest-post__tags">
            {% for tag in post.tags %}
              <span class="latest-post__tag">{{ tag.name }}</span>
            {% endfor %}
          </div>
        {% endif %}
        <p class="latest-post__posttitle">{{ post.title }}</p>
        <p class="latest-post__intro">{{ post.text }}</p>
        <a class="latest-post__read-more" href="{{ post.link }}">{{ __('Read more', 'timber') }}</a>
      </div>
    </div>
    <div class="latest-post__link">
      <span>
        <a class="underline" href="{{ block.link.url.url }}" target="{{ block.link.url.target }}">{{ block.link.label }}</a>
        {{ block.link.text }}
      </span>
    </div>
  </div>
</div>
