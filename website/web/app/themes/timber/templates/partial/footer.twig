{% import 'macros/titles.twig' as title %}

<footer id="footer">
  <div class="constrict">
    <div class="footer-main-menu">

     <div class="logo">
      <div>
        {% if custom_logo_url %}
          <a class="hdr-logo-link logo-footer" href="{{site.url}}" rel="home">
            <img src="{{ custom_logo_url }}" class="logo-footer" alt="{{ site.name }}" width="185px" />
          </a> 
        {% else %}
          <a class="hdr-logo-link logo-footer" href="{{site.url}}" rel="home">
            {{ site.name }}
          </a>
        {% endif %}
        {% include "partial/wysiwyg.twig" with {'text': contact_cta } %}
        <a href="{{ contact_cta_link }}" class="call_to_action">{{ contact_cta_text }}</a>

      </div>
    </div>
    <div class="kantoren">
        <h3>Offices</h3>
        {% include "partial/wysiwyg.twig" with {'text': offices } %}
    </div>
    <div>
      <div class="insights">
        <h3>Insights</h3>
        {% include "partial/menu.twig" with {'menu': insights_menu, 'items': insights_menu.get_items, 'class': 'insights-menu'} %}
      </div>
      <div class="general">
        <h3>General</h3>
        {% include "partial/menu.twig" with {'menu': general_menu, 'items': general_menu.get_items, 'class': 'general-menu'} %}
      </div>
    </div>
    <div>
      <div class="about">
        <h3>About us</h3>
        {% include "partial/menu.twig" with {'menu': about_menu, 'items': about_menu.get_items, 'class': 'about-menu'} %}
      </div>
      <div class="services">
        <h3>What we do</h3>
        {% include "partial/menu.twig" with {'menu': services_menu, 'items': services_menu.get_items, 'class': 'services-menu'} %}
      </div>
    </div>

      <div class="contact">
        <h3>Contact</h3>
        {% include "partial/wysiwyg.twig" with {'text': contact_info } %}
      {% if socials %}
      <ul>
        {% for social in socials %}
          <li>
            <a href="{{ social.link.url }}" target="{{ social.link.target }}" style="text-decoration: none">
            <svg style="color: white" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-linkedin" viewBox="0 0 16 16"> <path d="M0 1.146C0 .513.526 0 1.175 0h13.65C15.474 0 16 .513 16 1.146v13.708c0 .633-.526 1.146-1.175 1.146H1.175C.526 16 0 15.487 0 14.854V1.146zm4.943 12.248V6.169H2.542v7.225h2.401zm-1.2-8.212c.837 0 1.358-.554 1.358-1.248-.015-.709-.52-1.248-1.342-1.248-.822 0-1.359.54-1.359 1.248 0 .694.521 1.248 1.327 1.248h.016zm4.908 8.212V9.359c0-.216.016-.432.08-.586.173-.431.568-.878 1.232-.878.869 0 1.216.662 1.216 1.634v3.865h2.401V9.25c0-2.22-1.184-3.252-2.764-3.252-1.274 0-1.845.7-2.165 1.193v.025h-.016a5.54 5.54 0 0 1 .016-.025V6.169h-2.4c.03.678 0 7.225 0 7.225h2.4z" fill="white"></path> </svg>            </a>
          </li>
        {% endfor %}
      </ul>
    {% endif %}
    </div>
    </div>

    <div class="footer-sub-menu">
      <div class="part-of">
        {% include "partial/wysiwyg.twig" with {'text': part_of } %}
      </div>
      <div>
        <p class="splitter">|</p>
      </div>
      <div>
      <a href="/privacy-policy" target="/privacy-policy">Privacy Policy</a>
      </div>
    </div>
</footer>
