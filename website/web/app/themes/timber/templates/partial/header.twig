{% if topbar_menu %}
  <nav class="topbar-menu">
    <ul>
      {% for item in topbar_menu.get_items %}
        <li><a href="{{ item.get_link }}">{{ item.title }}</a></li>
      {% endfor %}
    </ul>
  </nav>
{% endif %}

<header class="header">
  <div class="wrapper">
    <h1 class="hdr-logo" role="banner">
      <a class="hdr-logo-link" href="{{site.url}}" rel="home">
        <span class="site-name">{{site.name}}</span>
        <span class="logo"></span>
      </a>
    </h1>
    <nav id="nav-main" class="nav-main" role="navigation">
      {% include "partial/menu.twig" with {'menu': menu, 'items': menu.get_items, 'class': 'primary-menu'} %}
    </nav>
    <nav id="nav-main-mobile" class="nav-main-mobile" role="navigation">
      <div class="hamburger-icon">
        <div class="icon"></div>
      </div>
      <div class="hamburger-menu">
        {% include "partial/menu.twig" with {'menu': menu, 'items': menu.get_items, 'class': 'primary-menu-mobile', 'isMobile': true} %}
        <p class="tagline">{{tagline}}</p>
      </div>
    </nav>
    <!-- #nav -->
  </div>
</header>
