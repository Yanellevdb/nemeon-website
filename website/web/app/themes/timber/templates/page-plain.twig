{% extends "_base/base.twig" %}

{% block content %}
  <div class="content-wrapper">
    <article class="post-type-{{post.post_type}}" id="post-{{post.ID}}">
      <section class="article-content">
        {% include 'blocks/hero_small.twig' with { block: {title: {size: 'h1', content: post.title}, background:'bg-dark-grey'}}%}
        <div class="constrict-xs">
          <div class="article-body">
            {{post.content}}
          </div>
        </div>
      </section>
    </article>
  </div>
{% endblock %}
